<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
  		<%= form_with model: @book do |f| %>

        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label><br>
          <%= f.text_area :body, class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <div class="actions">
            <%= f.submit 'Update Book', class: "btn btn-success Update_Book" %>
          </div>
        </div>

        <%= link_to "Show", book_path(@book.id) %>
        <span> | </span>
        <%= link_to "Back", books_path %>

      <% end %>
    </div>
  </div>
</div>